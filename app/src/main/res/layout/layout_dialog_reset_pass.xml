<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/bg_popup_conner_16"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nhập gmail của bạn "
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/dialogResetPassword_edtConfirmMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_white_conner_16_border_gray"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/dialogChangePassword_btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#ff4668"
                android:textSize="17sp" />

            <Button
                android:id="@+id/dialogResetPassword_btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>